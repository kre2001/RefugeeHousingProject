@using Resources
@model RefugeeHousing.ViewModels.PropertyEnquiry

@using (Html.BeginForm("ContactOwner", "Properties"))
{
  @Html.HiddenFor(model => model.PropertyId)

  <div class="form-group">
    <label>@LocalizedText.EnquirerName</label>
    @Html.TextBoxFor(model => model.EnquirerName, new {@class = "form-control", required = "required"})
  </div>

  <div class="form-group">
    <label>@LocalizedText.EnquirerEmailAddress</label>
    @Html.TextBoxFor(model => model.EnquirerEmail, new {@class = "form-control", required = "required"})
  </div>

  <div class="form-group">
    <label>@LocalizedText.OrganizationName</label>
    @Html.TextBoxFor(model => model.OrganizationName, new {@class = "form-control", required = "required"})
  </div>

  <div class="form-group">
    <label>@LocalizedText.OrganizationWebsite</label>
    @Html.TextBoxFor(model => model.OrganizationWebsite, new {@class = "form-control", required = "required"})
  </div>

  <div class="form-group">
    <label>@LocalizedText.LanguagesSpoken</label>
    <div class="checkbox">
      <label>
        @Html.CheckBoxFor(model => model.EnquirerSpeaksEnglish)
        @LocalizedText.EnglishLanguage
      </label>
    </div>
    <div class="checkbox">
      <label>
        @Html.CheckBoxFor(model => model.EnquirerSpeaksGreek)
        @LocalizedText.GreekLanguage
      </label>
    </div>
    <div class="checkbox">
      <label>
        @Html.CheckBoxFor(model => model.EnquirerSpeaksFrench)
        @LocalizedText.FrenchLanguage
      </label>
    </div>
    <div class="checkbox">
      <label>
        @Html.CheckBoxFor(model => model.EnquirerSpeaksGerman)
        @LocalizedText.GermanLanguage
      </label>
    </div>
  </div>

  <div class="form-check">
    <label>
      <input type="checkbox" name="agree_to_sign_contract" required />
      @LocalizedText.WillSignContract
    </label>
  </div>

  <input type="submit" class="btn btn-primary" value="@LocalizedText.SubmitEnquiry" />
}