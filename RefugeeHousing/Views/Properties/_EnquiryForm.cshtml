@using Resources
@model RefugeeHousing.ViewModels.PropertyEnquiry

@using (Html.BeginForm("ContactOwner", "Properties"))
{
  <div class="form-group">
    <label>@LocalizedText.EnquirerName</label>
    @Html.TextBoxFor(model => model.EnquirerName, new {@class = "form-control", required = "required"})
  </div>

  <div class="form-group">
    <label>@LocalizedText.EnquirerEmailAddress</label>
    @Html.TextBoxFor(model => model.EnquirerEmail, new {@class = "form-control", required = "required"})
  </div>

  @Html.HiddenFor(model => model.PropertyId)

  <input type="submit" class="btn btn-primary" value="@LocalizedText.SubmitEnquiry" />
}