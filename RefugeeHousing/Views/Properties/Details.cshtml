@using RefugeeHousing.Models
@using RefugeeHousing.ViewModels
@using Resources
@model ListingDetailsViewModel

<h2 class="display-1">@(LocalizedText.PropertyDetails)</h2>

<table class="table table-hover table-condensed">
    <tr>
        <th>@LocalizedText.Reference:</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        @{ var user = (ApplicationUser) ViewBag.User; }
        <th>@LocalizedText.Location:</th>
        <td>@Model.GetLocation(user.PreferredLanguage)</td>
    </tr>
    <tr>
        <th>@LocalizedText.Bedrooms:</th>
        <td>@Model.NumberOfBedrooms</td>
    </tr>
    <tr>
        <th>@LocalizedText.Furnished:</th>
        <td>@(Model.Furnished ? LocalizedText.Yes : LocalizedText.No)</td>
    </tr>
    <tr>
        <th>@LocalizedText.AppliancesIncluded:</th>
        <td>@(Model.Appliances)</td>
    </tr>
    <tr>
        <th>@LocalizedText.Elevator:</th>
        <td>@(Model.Elevator ? LocalizedText.Yes : LocalizedText.No)</td>
    </tr>
    <tr>
        <th>@LocalizedText.PricePerMonth:</th>
        <td>€@Model.Price</td>
    </tr>
</table>

<h2 class="display-1">@(LocalizedText.ContactFormHeader)</h2>

<p>@LocalizedText.PropertyOwnerLanguages: @Model.LanguagesSpoken</p>

@{
    Html.RenderPartial("_EnquiryForm", new PropertyEnquiry { PropertyId = Model.Id });
}