@using Resources
@model RefugeeHousing.Models.ListingsList

@{
    ViewBag.Title = "List";
}

<h2>Available Listings</h2>

<table class="table table-hover table-condensed">
    <thead>
        <tr>
            <th>Reference</th>
            <th>Description</th>
            <th>@LocalizedText.Furnished</th>
            <th>@LocalizedText.PricePerMonth</th>
        </tr>
    </thead>
    @foreach (var listing in Model.Listings)
    {
        <tr>
            <td>REF</td>
            <td>DESCRIPTION</td>
            <td>@(listing.Furnished ? "Yes" : "No")</td>
            <td>@listing.Price</td>
        </tr>
    }
</table>

