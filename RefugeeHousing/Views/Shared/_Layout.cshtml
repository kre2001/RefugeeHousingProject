﻿﻿@using RefugeeHousing.Models
@using RefugeeHousing.Translations
@using Resources
﻿@using RefugeeHousing.Translations
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.12/datatables.min.css">
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(LocalizedText.ApplicationName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(LocalizedText.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(LocalizedText.About, "About", "Home")</li>
                    <li>@Html.ActionLink(LocalizedText.Contact, "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(LocalizedText.Properties, "Index", "Properties")</li>
                    }
                </ul>
                <div class="navbar-right">
                    @Html.Partial("_LoginPartial")
                    <ul class="nav navbar-nav language-options">
                        @foreach (Language language in Enum.GetValues(typeof (Language)))
                        {
                            <li>
                                @Html.ActionLink(language.GetName(),"SetLanguage", "Translation", new {language}, null)
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.datatables.net/v/bs/dt-1.10.12/datatables.js"></script>
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
